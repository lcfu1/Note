function displayDate(){
	var parse_json_by_JSON_parse = function(str){
    return JSON.parse(str);
}
var jsonstr = document.getElementById(&quot;demo&quot;).value;
var json2 = parse_json_by_JSON_parse(jsonstr);
var a=&quot;&quot;
for (var i=0;i&lt;json2.data.list.length;i++)
{ 
	var b=json2.data.list[i].user_name;
    a=a + b.replace(/[0-9]+/,&quot;&quot;) + &quot;、&quot;
}

	document.getElementById(&quot;demo1&quot;).innerHTML=a;
}
